<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_row_height"
    android:id="@+id/cityRowBack"
    android:background="@drawable/mainpage_enable_rowclicked"
    android:gravity="center"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:src="@drawable/green_arrows" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="5.1"
        android:layout_height="wrap_content"
        android:text="Madison,WI"
        style="@style/main_page_list_text1"
        android:id="@+id/textView22" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="$3.99"
        style="@style/main_page_list_text1"
        android:id="@+id/textView23"  />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_height="wrap_content"
        android:text="220 Offers"
        style="@style/main_page_list_text2"
        android:id="@+id/textView24" />
</LinearLayout>
