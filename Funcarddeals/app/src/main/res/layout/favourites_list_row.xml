<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_row_height"
    android:gravity="center"
    android:background="@drawable/rem_rowclicked"
    android:orientation="horizontal">


    <TextView
        android:layout_width="0dp"
        android:layout_weight=".1"
        android:layout_height="match_parent"
        style="@style/store_offer_head_text"
        android:padding="0dp"
        android:gravity="center"
        android:id="@+id/fav_index" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight=".8"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fav_toptext"
            style="@style/store_offer_head_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".4"  />
        <TextView
            android:id="@+id/fav_bottomtext"
            style="@style/store_offer_head_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2e8b57"
            android:layout_weight=".4"  />

    </LinearLayout>

    <ImageView
        android:id="@+id/remove_fav"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1px"
        android:layout_weight=".2"
        android:background="@drawable/rem_rowclicked"
        android:src="@drawable/remb" />

</LinearLayout>
