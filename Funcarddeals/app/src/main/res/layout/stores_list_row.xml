<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_row_height"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/store_left"
        style="@style/main_page_list_text1"
        android:paddingLeft="2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="@drawable/mainpage_enable_rowclicked"
        android:text="Madison,WI" />

    <TextView
        android:id="@+id/store_right"
        style="@style/main_page_list_text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.2"
        android:layout_marginTop="1px"
        android:background="@drawable/storespage_row_greeclickedn"
        android:gravity="center"
        android:paddingRight="12dp"
        android:text="15 Offers"
        android:textColor="#ffffff" />
</LinearLayout>
