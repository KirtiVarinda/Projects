<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"  >
        <shape>

            <stroke
                android:width="1dp"
                android:color="#fafafa" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="8dp"
                android:top="10dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item>
        <shape>

            <stroke
                android:width="1dp"
                android:color="#fafafa" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>