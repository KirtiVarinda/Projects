<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="shareWithFriends"
        android:paddingTop="@dimen/appbar_padding_top"
        android:paddingBottom="@dimen/appbar_padding_top"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/shareWithFriendsImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/ic_social_share" />


        <TextView
            android:id="@+id/shareWithFriendsText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Share with Friends"
            android:textColor="#6c6c6c"
            android:textSize="@dimen/resto_textsize1"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/appbar_padding_top"
        android:paddingBottom="@dimen/appbar_padding_top"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/shareLocationImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/ic_location_on" />


        <TextView
            android:id="@+id/shareLocationText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Share Location"
            android:textColor="#6c6c6c"
            android:textSize="@dimen/resto_textsize1"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="logoutApp"
        android:paddingTop="@dimen/appbar_padding_top"
        android:paddingBottom="@dimen/appbar_padding_top"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/logoutImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/ic_action_settings_power" />


        <TextView
            android:id="@+id/logoutText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:text="Logout"
            android:textColor="#6c6c6c"
            android:textSize="@dimen/resto_textsize1"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>




