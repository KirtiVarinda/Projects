<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/addRequestLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:background="@drawable/circleimage"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/requestImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Loading..."
                android:textSize="8sp"
                android:gravity="center"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.2"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">


            <TextView
                android:id="@+id/request_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Smith"
                android:textColor="#2b90a1"
                android:textSize="@dimen/addPartner_TextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="John Smith"
                android:textColor="#2b90a1"
                android:textSize="@dimen/addPartner_TextSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                android:id="@+id/accept"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tick" />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/addPartnerLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circleimage"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

              <!--  <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColorHint="#2b90a1">-->

                    <AutoCompleteTextView
                        android:id="@+id/partnerEmailToConnect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#2b90a1"
                        android:drawableLeft="@drawable/emailicon"
                        android:drawablePadding="10dp"
                        android:drawableTint="#2b90a1"
                        android:hint="@string/prompt_email"
                        android:textColor="#2b90a1"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColorHint="#2b90a1"
                        android:textSize="@dimen/addPartner_TextSize" />

              <!--  </android.support.design.widget.TextInputLayout>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/plus_partner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/plus_partner" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>





</LinearLayout>