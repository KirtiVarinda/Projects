    <style name="myTheme_Textcolor">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/hourlypage_textSize</item>
    </style>


    <!-- hourly reminder page -->
    <style name="hourlypage_centerlayout_style">
        <item name="android:layout_marginLeft">@dimen/center_layoutmargin_left</item>
        <item name="android:layout_marginRight">@dimen/center_layoutmargin_right</item>
    </style>

    <style name="hourlyPage_textStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">@dimen/textPadding_left</item>
        <item name="android:paddingRight">@dimen/textPadding_right</item>
        <item name="android:textSize">@dimen/hourlypage_textSize</item>
    </style>

    <style name="hourlyPgae_semiround_textStyle" parent="myTheme_Textcolor">
        <item name="android:paddingTop">@dimen/semiRound_paddingTop</item>
        <item name="android:layout_marginRight">@dimen/semiRound_marginRight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="hourlyPage_textStyle1">
        <item name="android:textColor">#878787</item>
        <item name="android:textSize">@dimen/hourlypage_textSize2</item>
    </style>

    <style name="hourlyPage_textStyle2">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/hourlypage_textSize3</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="reminderMessage_textStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/reminderMessage_textSize</item>

    </style>


    <style name="selectWeekDay_textStle">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
    </style>


    <!-- main page strip text style -->
    <style name="strip_textStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/main_page_strip</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:background">@drawable/background_head</item>
        <item name="android:minHeight">@dimen/mainlist_height</item>
        <item name="android:visibility">invisible</item>


    </style>


    <style name="text_theme_white">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="text_theme_black">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="getmissedcall_text_theme" parent="text_theme_black">
        <item name="android:textSize">@dimen/catch_missedCall_textSize11</item>
    </style>
    <style name="getmissedcall_text2_theme">
        <item name="android:textColor">#787878</item>
        <item name="android:textSize">@dimen/catch_missedCall_textSize21</item>
    </style>


    <style name="getmissedcall_buttontext_theme" parent="text_theme_white">
        <item name="android:textSize">@dimen/catch_missedCall_textSize11</item>
        <item name="android:gravity">center</item>


    </style>



</resources>