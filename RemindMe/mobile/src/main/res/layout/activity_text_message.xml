<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
         android:layout_marginTop="60dp"
        android:background="@drawable/message_top" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginTop="25dp"
        android:background="@drawable/close_reminder" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:background="@drawable/wakeup_center" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:background="@drawable/wakeup_center" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/textView5"
        android:layout_toLeftOf="@+id/button1"
        android:paddingLeft="20dp"
        android:paddingRight="4dp"
        android:singleLine="true"
        android:text="Message Avnish1 Singh for...."
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:background="@drawable/wakeup_bottom" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_marginBottom="14dp"
        android:paddingLeft="15dp"
        android:text="For:"
          android:gravity="center_vertical|right"
        android:textColor="#878787"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_marginBottom="14dp"
        android:paddingLeft="15dp"
        android:text="On:"
          android:gravity="center_vertical|right"
        android:textColor="#878787"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignRight="@+id/textView18"
        android:layout_marginBottom="14dp"
        android:paddingLeft="15dp"
        android:text="At:"
          android:gravity="center_vertical|right"
        android:textColor="#878787"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView18"
        android:layout_toLeftOf="@+id/textView1"
        android:layout_toRightOf="@+id/textView20"
        android:paddingLeft="8dp"
        android:text="Subject"
        android:textColor="#000"
        android:singleLine="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignTop="@+id/textView19"
        android:layout_toRightOf="@+id/textView20"
        android:paddingLeft="8dp"
        android:text="26 November 2013"
        android:textColor="#000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView20"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignRight="@+id/textView21"
        android:paddingLeft="8dp"
        android:text="11:38 pm"
        android:textColor="#000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView21"
        android:layout_alignBottom="@+id/textView21"
        android:layout_alignRight="@+id/textView7"
        android:background="@drawable/edit" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView22"
        android:layout_alignBottom="@+id/textView22"
        android:layout_alignRight="@+id/textView11"
        android:background="@drawable/edit" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:background="@drawable/wakeup_center" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_marginBottom="14dp"
        android:background="@drawable/edit"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/textView6"
        android:background="@drawable/edit" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/textView18"
        android:paddingLeft="15dp"
          android:gravity="center_vertical|right"
        android:text="To:"
        android:textColor="#878787"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:text="Select Contact"
        android:textColor="#000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginBottom="5dp"
         android:layout_marginRight="5dp"
        android:background="@drawable/yes_remind" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignTop="@+id/textView14" />

</RelativeLayout>