<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectTime" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/wakeup_center" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/wakeup_bottom" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignTop="@+id/textView1"
        android:gravity="center_vertical|right"
        android:text="Hour:"
        android:textColor="#878787"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/time_head" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:maxHeight="6dp"
		android:minHeight="6dp"
        android:layout_alignLeft="@+id/textView11"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView10"
        android:max="11"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
      	 
        android:progressDrawable="@drawable/progressbar" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignTop="@+id/textView3"
        android:gravity="center_vertical|right"
        android:paddingLeft="10dp"
        android:text="Minute:"
        android:textColor="#878787"
        android:textSize="15dp" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="6dp"
		android:minHeight="6dp"
        android:layout_alignLeft="@+id/seekBar1"
        android:layout_alignRight="@+id/seekBar1"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginTop="10dp"
        android:max="59"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingBottom="6dp"
        android:progressDrawable="@drawable/progressbar"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar1"
        android:layout_alignTop="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:gravity="center"
        android:text=":"
        android:textColor="#fff"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar1"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView2"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:layout_marginLeft="5dp"
        android:text="06"
        android:textColor="#fff"
        android:textSize="48dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignTop="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:gravity="center"
        android:text="10"
        android:textColor="#fff"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginTop="16dp"
        android:background="@drawable/close_reminder" />
       <TextView
        android:id="@+id/textView10"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_centerVertical="true"
       />

     

       <Button
           android:id="@+id/button2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignRight="@+id/textView6"
           android:layout_marginRight="8dp"
           android:layout_marginTop="5dp"
           android:layout_alignTop="@+id/textView12"
           android:background="@drawable/yes_remind" />

       <TextView
           android:id="@+id/textView13"
           android:layout_width="40dp"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/textView6"
           android:layout_alignTop="@+id/textView11"
           android:layout_toRightOf="@+id/textView11"
          />

       <TextView
           android:id="@+id/textView12"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignRight="@+id/textView13"
           android:layout_alignTop="@+id/textView11"
           android:layout_marginTop="20dp"
           android:layout_toRightOf="@+id/textView11"
           android:text="AM"
           android:gravity="center"
           android:textColor="#fff"
           android:textSize="15dp"
           android:textStyle="bold"/>

       <TextView
           android:id="@+id/textView4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/textView9"
           android:layout_alignBottom="@+id/textView9"
           android:layout_alignRight="@+id/textView13"
           android:layout_toRightOf="@+id/textView11"
           android:text="PM"
           android:gravity="center"
           android:textColor="#fff"
           android:textSize="15dp"
           android:textStyle="bold" />

</RelativeLayout>