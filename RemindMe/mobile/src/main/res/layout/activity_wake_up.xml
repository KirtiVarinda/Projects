<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:id="@+id/layout1"
   	>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
          android:layout_marginTop="60dp"
        android:background="@drawable/wakeup_top" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginTop="25dp"
        android:background="@drawable/close_reminder"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
      
        android:background="@drawable/menubg" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:background="@drawable/wakeup_center"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:background="@drawable/wakeup_center"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:background="@drawable/wakeup_center" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/textView4"
        android:layout_toLeftOf="@+id/button1"
        android:paddingLeft="15dp"
        android:paddingRight="4dp"
        android:textColor="#fff"
         android:singleLine="true"
        android:text="Everyday at 06:35 am for J..." />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:background="@drawable/wakeup_bottom" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_marginBottom="14dp"
        android:layout_toLeftOf="@+id/textView21"
         android:gravity="center_vertical|right"
        android:paddingLeft="15dp"
        android:text="At:"
        android:textColor="#878787"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_marginBottom="14dp"
         android:gravity="center_vertical|right"
    	android:paddingLeft="15dp"
        android:text="For:"
        android:textColor="#878787"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView19"
        android:layout_toRightOf="@+id/textView20"
        android:paddingLeft="6dp"
        android:text="06:35 am"
        android:textColor="#000"
        android:textStyle="bold" android:layout_toLeftOf="@+id/textView1"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView20"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignLeft="@+id/textView21"
        android:paddingLeft="6dp"
        android:text="Jogging"
        android:textColor="#000"
        android:freezesText="false" 
        android:singleLine="true"
        android:textStyle="bold" android:layout_toLeftOf="@+id/textView1"/>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView21"
        android:layout_alignBottom="@+id/textView21"
        android:layout_alignRight="@+id/textView7"
        android:background="@drawable/edit" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView22"
        android:layout_alignBottom="@+id/textView22"
        android:layout_alignRight="@+id/textView11"
        android:background="@drawable/edit" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginLeft="12dp"
        android:background="@drawable/hover_changebg"
        android:gravity="center"
        android:text="Everyday"
        android:textColor="#fff"
        android:paddingBottom="10dp"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignTop="@+id/textView6"
        android:layout_toLeftOf="@+id/textView21"
         android:gravity="center_vertical|right"
        android:paddingLeft="15dp"
        android:text="On:"
        android:textColor="#878787"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignTop="@+id/textView6"
        android:layout_toLeftOf="@+id/textView8"
        android:layout_toRightOf="@+id/textView18"
        android:gravity="center_vertical|left"
        android:paddingLeft="6dp"
        android:text="Everyday of the week"
        android:textColor="#2D2D2D" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignRight="@+id/button1"
        android:background="@drawable/menu_bg"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="Weekends"
        android:textColor="#fff"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toLeftOf="@+id/textView14"
        android:background="@drawable/menu_bg"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="Weekdays"
        android:layout_marginRight="12dp"
        android:textColor="#fff"
        android:textSize="13dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginBottom="5dp"
          android:layout_marginRight="5dp"
        android:background="@drawable/yes_remind" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/textView6"
         android:background="@drawable/edit" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
           android:background="@drawable/shadow1"/>

</RelativeLayout>